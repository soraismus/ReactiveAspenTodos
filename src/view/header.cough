{ h1, header } = require '../vendor/DOM'
{ $text }      = require '../vendor/adapters'

todosCaption = ->
  h1 (null, 'todos')

todoInput = $text 'new-todo-input'

AppHeader = \focus ->
  header
    id : 'header'
    todosCaption ()
    todoInput
      id          : 'new-todo'
      placeholder : 'What needs to be done?'
      onKeyDown   : true
      autoFocus   : focus

module.exports = AppHeader
