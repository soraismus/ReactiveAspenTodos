{ Bridge, React } = require '../../vendor/reactive-aspen'
{ h1, header }    = React.DOM
{ $text }         = Bridge.adapters 

todosCaption = ->
  h1 (null, 'todos')

todoInput = $text 'new-todo-input'

AppHeader = \focus ->
  header
    id : 'header'
    todosCaption ()
    todoInput
      id          : 'new-todo'
      placeholder : 'What needs to be done?'
      onKeyDown   : true
      autoFocus   : focus

module.exports = AppHeader
