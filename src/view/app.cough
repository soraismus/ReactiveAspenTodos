{ div } = require '../vendor/DOM'

AppBody   = require './body'
AppFooter = require './footer'
AppHeader = require './header'

headerHasFocus = \editing ->
  editing == null

TodoApp = \appState ->
  div (
    null
    AppHeader (headerHasFocus appState.editing)
    AppBody appState
    AppFooter appState
  )

module.exports = TodoApp
